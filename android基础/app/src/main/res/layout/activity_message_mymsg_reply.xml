<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context="com.dawoo.gamebox.view.activity.message.MessageDetailActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/text_color_gray_E2E2E2"></View>

    <TextView
        android:id="@+id/repalyTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginTop="10dp"
        android:text=""
        android:textColor="@color/text_color_gray_999999"
        android:textSize="@dimen/text_10_sp" />

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:background="@color/btn_yellow_press"
        android:gravity="center"
        android:padding="1dp"
        android:text="@string/reply"
        android:textColor="@color/white"
        android:textSize="@dimen/text_12_sp" />


    <TextView
        android:id="@+id/replyTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/repalyTime"
        android:layout_toRightOf="@+id/tv_1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:text=""
        android:textColor="@color/text_color_gray_333333"
        android:textSize="@dimen/text_13_sp" />


    <TextView
        android:id="@+id/replyContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_1"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="2dp"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:textColor="@color/text_color_gray_333333"
        android:textSize="@dimen/text_12_sp" />

</RelativeLayout>
