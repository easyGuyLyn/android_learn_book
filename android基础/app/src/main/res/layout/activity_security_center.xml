<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.dawoo.gamebox.view.activity.SecurityCenterActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/cecurity_bg">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_height"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/record_margin">
                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="6dp"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:src="@mipmap/head_back_icon_unclick" />

                <TextView
                    android:id="@+id/title_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_title_sp"
                    android:text="@string/security_center"/>


            </RelativeLayout>

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="42dp"
                android:text="@string/name_security"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14_sp" />

            <TextView
                android:id="@+id/tip_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:text="@string/tip_security"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14_sp" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="9dp"
            android:background="@color/custom_tab_up_down_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bgColor"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/modify_login_pwd_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_vertical_item_hight"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/modify_login_pwd"
                    android:textColor="@color/text_color_gray_333333"
                    android:textSize="@dimen/text_14_sp" />

                <ImageView
                    android:id="@+id/modify_login_pwd_iv"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/next_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/modify_login_pwd_iv"
                    android:text="@string/modify"
                    android:textColor="@color/text_color_gray_999999"
                    android:textSize="@dimen/text_12_sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:background="@color/custom_tab_up_down_bg" />

            <RelativeLayout
                android:id="@+id/modify_security_pwd_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_vertical_item_hight"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/modify_security_pwd"
                    android:textColor="@color/text_color_gray_333333"
                    android:textSize="@dimen/text_14_sp" />

                <ImageView
                    android:id="@+id/modify_security_pwd_iv"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/next_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/modify_security_pwd_iv"
                    android:text="@string/setting"
                    android:textColor="@color/text_color_gray_999999"
                    android:textSize="@dimen/text_12_sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:background="@color/custom_tab_up_down_bg"
                android:visibility="gone"/>

            <RelativeLayout
                android:id="@+id/lock_screen_gisture_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_vertical_item_hight"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/lock_screen_gisture"
                    android:textColor="@color/text_color_gray_333333"
                    android:textSize="@dimen/text_14_sp" />

                <ImageView
                    android:id="@+id/lock_screen_gisture_iv"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/next_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/lock_screen_gisture_iv"
                    android:text="@string/setting"
                    android:textColor="@color/text_color_gray_999999"
                    android:textSize="@dimen/text_12_sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:background="@color/custom_tab_up_down_bg" />

            <RelativeLayout
                android:id="@+id/bank_card_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_vertical_item_hight"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/tv_bank_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/bank_card"
                android:textColor="@color/text_color_gray_333333"
                android:textSize="@dimen/text_14_sp" />

            <ImageView
                android:id="@+id/iv_bank_name"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_bank_card"
                android:layout_marginLeft="@dimen/record_margin"/>

            <TextView
                android:id="@+id/tv_bank_card_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_bank_name"
                android:textSize="@dimen/text_12_sp"
                android:layout_marginLeft="@dimen/record_margin"
                android:textColor="@color/colorSub"/>

            <ImageView
                android:id="@+id/bank_card_iv"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/next_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/bank_card_iv"
                    android:text="@string/setting"
                    android:textColor="@color/text_color_gray_999999"
                    android:textSize="@dimen/text_12_sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:background="@color/custom_tab_up_down_bg" />

        <RelativeLayout
            android:id="@+id/btb_account_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_vertical_item_hight"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/btb_account"
                    android:textColor="@color/text_color_gray_333333"
                    android:textSize="@dimen/text_14_sp" />

                <ImageView
                    android:id="@+id/btb_account_iv"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/next_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/btb_account_iv"
                    android:text="@string/setting"
                    android:textColor="@color/text_color_gray_999999"
                    android:textSize="@dimen/text_12_sp" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
    </LinearLayout>

</ScrollView>
