<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bgColor"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="70dp"
                android:src="@mipmap/promo_bg_left" />

            <View
                android:layout_width="12dp"
                android:layout_height="70dp"
                android:layout_marginLeft="5dp"
                android:background="@color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="5"
            android:background="@color/white"
            android:paddingBottom="8dp"
            android:paddingEnd="@dimen/activity_horizontal_margin_new"
            android:paddingStart="@dimen/activity_horizontal_margin_new"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/title_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="盈亏送E3"
                android:lines="2"
                android:lineSpacingExtra="6dp"
                android:textColor="@color/text_color_gray_333333"
                android:textSize="@dimen/text_12_sp" />

            <TextView
                android:id="@+id/tip_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:text="盈亏送E3"
                android:textColor="@color/text_color_gray_999999"
                android:textSize="@dimen/text_12_sp" />

            <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="bottom|end"
                android:text="2017-yyy-11 22:22:11"
                android:textColor="@color/text_color_gray_999999"
                android:textSize="@dimen/text_12_sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="11dp"
            android:layout_height="70dp"
            android:src="@mipmap/promo_bg_right" />

        <LinearLayout
            android:id="@+id/image_background"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="2"
            android:background="@color/btn_greenBlue_normal"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/money_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:gravity="center"
                android:text="¥2000.00"
                android:textColor="@color/white"
                android:textSize="@dimen/text_12_sp" />

            <TextView
                android:id="@+id/status_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:gravity="center"
                android:text="已发送"
                android:textColor="@color/white"
                android:textSize="@dimen/text_12_sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/list_item" />
</LinearLayout>
