<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:orientation="vertical"
    tools:context="com.dawoo.gamebox.view.activity.SettingActivity">

    <com.dawoo.gamebox.view.view.HeaderView
        android:id="@+id/head_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height" />

    <RelativeLayout
        android:id="@+id/setting_voice_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_vertical_item_hight"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/voice_setting"
            android:gravity="center"
            android:textColor="@color/text_color_gray_333333"
            android:textSize="@dimen/text_14_sp" />

        <Switch
            android:id="@+id/voice_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:background="@color/bgColor" />

    <RelativeLayout
        android:id="@+id/setting_gisture_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_vertical_item_hight"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lock_screen_gisture"
            android:textColor="@color/text_color_gray_333333"
            android:textSize="@dimen/text_14_sp" />


        <Switch
            android:id="@+id/gisture_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:background="@color/bgColor" />


    <Button
        android:id="@+id/logout_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_vertical_button_hight"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="32dp"
        android:background="@drawable/frament_home_one_key_back_corn_selector"
        android:text="@string/logout_setting"
        android:textColor="@color/white"
        android:textSize="@dimen/text_14_sp" />
</LinearLayout>
