<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="275dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dialog_ios"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/set_real_name"
        android:textColor="@color/black"
        android:textSize="@dimen/text_title_sp" />

    <EditText
        android:id="@+id/et_set_realName"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/shape_edittext_input_realname"
        android:hint="@string/input_real_name"
        android:inputType="textPersonName"
        android:padding="2dp"
        android:text=""
        android:textColor="@color/text_color_gray_333333"
        android:textColorHint="@color/text_color_gray_999999"
        android:textSize="@dimen/text_14_sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#acacac" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ok"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="чбошод"
            android:textColor="@color/text_color_gray_333333"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>
