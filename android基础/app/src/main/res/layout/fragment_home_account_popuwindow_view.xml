<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="420dp"
    android:background="@color/item_theme_white"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin">


    <RelativeLayout
        android:id="@+id/asset_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/total_asset_lable"
            android:layout_width="50dp"
            android:layout_height="19dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/frament_home_lable_bg_blue_corn"
            android:gravity="center"
            android:text="@string/account_total_asset"
            android:textColor="@color/white"
            android:textSize="@dimen/text_12_sp" />

        <TextView
            android:id="@+id/total_asset_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_12_sp" />
    </RelativeLayout>

    <View
        android:id="@+id/divider_1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/asset_rl"
        android:background="@color/bgColor" />


    <RelativeLayout
        android:id="@+id/wallet_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider_1"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/wallet_lable"
            android:layout_width="50dp"
            android:layout_height="19dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/frament_home_lable_bg_green_corn"
            android:gravity="center"
            android:text="@string/account_wallet"
            android:textColor="@color/white"
            android:textSize="@dimen/text_12_sp" />

        <TextView
            android:id="@+id/wallet_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@color/account_deposit_btn_color"
            android:textSize="@dimen/text_12_sp" />
    </RelativeLayout>

    <View
        android:id="@+id/divider_2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/wallet_rl"
        android:background="@color/bgColor" />

    <Button
        android:id="@+id/one_key_back_btn"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_above="@+id/deposit_btn"
        android:background="@drawable/frament_home_one_key_back_corn_selector"
        android:text="@string/account_one_key_back"
        android:textColor="@color/list_item" />

    <Button
        android:id="@+id/deposit_btn"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="17dp"
        android:background="@drawable/frament_home_deposit_btn_corn_selector"
        android:text="@string/title_deposit"
        android:textColor="@color/list_item" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/account_game_recycylervieww"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/one_key_back_btn"
        android:layout_below="@id/divider_2" />
</RelativeLayout>
