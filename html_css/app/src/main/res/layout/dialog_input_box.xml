<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dialog_inpot_box_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_dialog_input_box_title_bg"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:padding="10dp"
        android:text="姓名验证"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="为了加强账户的安全防护体系，请验证真实姓名，验证通过后即可成功登录"
        android:textColor="#c78583"
        android:textSize="12sp"
        android:padding="10dp"
        android:background="@drawable/shape_dialog_hint_bg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginBottom="5dp"
            android:textSize="12sp"
            android:text="您的真实姓名"
            android:layout_marginRight="10dp"/>
        <EditText
            android:id="@+id/et_set_realName"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/shape_edittext_input_realname"
            android:hint="输入真实姓名"
            android:inputType="textPersonName"
            android:padding="2dp"
            android:text=""
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/ok_"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/white"
            android:background="@color/tabTextSelected"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/cancel_"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="取消"
            android:background="@drawable/shape_dialog_input_box_cancel"
            android:textColor="#333333"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>