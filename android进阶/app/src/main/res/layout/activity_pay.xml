<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.dawoo.lotterybox.view.view.HeaderView
        android:id="@+id/head_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height" />

    <!--<android.support.v7.widget.RecyclerView-->
    <!--android:id="@+id/recyclerview_lsit"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent">-->

    <!--</android.support.v7.widget.RecyclerView>-->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/pay_weixin_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:src="@mipmap/pay_weixin" />

        <TextView
            android:id="@+id/pay_weixin_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/pay_weixin_image"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/pay_weixin_image"
            android:text="微信支付"
            android:textColor="@color/color_gray_333333"
            android:textSize="@dimen/text_14_sp" />

        <TextView
            android:id="@+id/pay_weixin_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/pay_weixin_image"
            android:layout_alignStart="@+id/pay_weixin_name"
            android:text="跳转到微信支付,快速到账"
            android:textColor="@color/text_color_gray_999999"
            android:textSize="@dimen/text_12_sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/color_gray_efefef" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/pay_zfb_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:src="@mipmap/pay_zfb" />

        <TextView
            android:id="@+id/pay_zfb_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/pay_zfb_image"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/pay_zfb_image"
            android:text="支付宝支付"
            android:textColor="@color/color_gray_333333"
            android:textSize="@dimen/text_14_sp" />

        <TextView
            android:id="@+id/pay_zfb_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/pay_zfb_image"
            android:layout_alignStart="@+id/pay_zfb_name"
            android:text="跳转到支付宝,快速到账"
            android:textColor="@color/text_color_gray_999999"
            android:textSize="@dimen/text_12_sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/color_gray_efefef" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/pay_qq_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:src="@mipmap/pay_qq" />

        <TextView
            android:id="@+id/pay_qq_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/pay_qq_image"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/pay_qq_image"
            android:text="qq支付"
            android:textColor="@color/color_gray_333333"
            android:textSize="@dimen/text_14_sp" />

        <TextView
            android:id="@+id/pay_qq_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/pay_qq_image"
            android:layout_alignStart="@+id/pay_qq_name"
            android:text="跳转到qq,快速到账"
            android:textColor="@color/text_color_gray_999999"
            android:textSize="@dimen/text_12_sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/color_gray_efefef" />

</LinearLayout>
