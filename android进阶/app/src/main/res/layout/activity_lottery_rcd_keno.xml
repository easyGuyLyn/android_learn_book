<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ssc_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_gray_333333"
            android:textSize="@dimen/text_14_sp" />

        <TextView
            android:id="@+id/ssc_expect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="98dp"
            android:textColor="@color/color_gray_666666"
            android:textSize="@dimen/text_12_sp" />

        <TextView
            android:id="@+id/ssc_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/ssc_expect"
            android:textColor="@color/color_gray_666666"
            android:textSize="@dimen/text_12_sp" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingEnd="2dp">

        <TextView
            android:id="@+id/keno_xy28_ball_one_tv"
            style="@style/keno_style" />

        <TextView
            android:id="@+id/keno_xy28_ball_two_tv"
            style="@style/keno_style" />

        <TextView
            android:id="@+id/keno_xy28_ball_three_tv"
            style="@style/keno_style" />

        <TextView
            android:id="@+id/keno_xy28_ball_four_tv"
            style="@style/keno_style" />

        <TextView
            android:id="@+id/keno_xy28_ball_five_tv"
            style="@style/keno_style" />

        <TextView
            android:id="@+id/keno_xy28_ball_six_tv"
            style="@style/keno_style" />

        <TextView
            android:id="@+id/keno_xy28_ball_seven_tv"
            style="@style/keno_style" />

        <TextView
            android:id="@+id/keno_xy28_ball_eight_tv"
            style="@style/keno_style" />

        <TextView
            android:id="@+id/keno_xy28_ball_nine_tv"
            style="@style/keno_style" />

        <TextView
            android:id="@+id/keno_xy28_ball_ten_tv"
            style="@style/keno_style" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingEnd="2dp">

        <TextView
            android:id="@+id/keno_xy28_ball_eleven_tv"
            style="@style/keno_style" />

        <TextView
            android:id="@+id/keno_xy28_ball_twelve_tv"
            style="@style/keno_style" />

        <TextView
            android:id="@+id/keno_xy28_ball_thirteen_tv"
            style="@style/keno_style" />

        <TextView
            android:id="@+id/keno_xy28_ball_fourteen_tv"
            style="@style/keno_style" />

        <TextView
            android:id="@+id/keno_xy28_ball_fifteen_tv"
            style="@style/keno_style" />

        <TextView
            android:id="@+id/keno_xy28_ball_sixteen_tv"
            style="@style/keno_style" />

        <TextView
            android:id="@+id/keno_xy28_ball_seventeen_tv"
            style="@style/keno_style" />

        <TextView
            android:id="@+id/keno_xy28_ball_eighteen_tv"
            style="@style/keno_style" />

        <TextView
            android:id="@+id/keno_xy28_ball_nineteen_tv"
            style="@style/keno_style" />

        <TextView
            android:id="@+id/keno_xy28_ball_twenty_tv"
            style="@style/keno_style" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/lable_count_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/keno_value_count_time"
            android:textColor="@color/color_gray_999999"
            android:textSize="@dimen/text_12_sp" />


        <com.dawoo.lotterybox.view.view.Anticlockwise
            android:id="@+id/keno_value_count_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@color/color_gray_999999"
            android:textSize="@dimen/text_12_sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="4dp"
        android:background="@color/color_divider" />
</LinearLayout>
