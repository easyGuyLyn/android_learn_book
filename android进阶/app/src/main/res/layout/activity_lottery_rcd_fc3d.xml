<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ssc_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_gray_333333"
            android:textSize="@dimen/text_14_sp" />

        <TextView
            android:id="@+id/ssc_expect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="98dp"
            android:textColor="@color/color_gray_666666"
            android:textSize="@dimen/text_12_sp" />

        <TextView
            android:id="@+id/ssc_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/ssc_expect"
            android:textColor="@color/color_gray_666666"
            android:textSize="@dimen/text_12_sp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/fc3d_ball_one_tv"
            style="@style/common_ball_style"
            android:background="@drawable/shape_ball_red" />

        <TextView
            android:id="@+id/fc3d_ball_two_tv"
            style="@style/common_ball_style"
            android:layout_toEndOf="@id/fc3d_ball_one_tv"
            android:background="@drawable/shape_ball_red" />

        <TextView
            android:id="@+id/fc3d_ball_three_tv"
            style="@style/common_ball_style"
            android:layout_toEndOf="@id/fc3d_ball_two_tv"
            android:background="@drawable/shape_ball_red" />

        <TextView
            android:id="@+id/fc3d_lable_sum_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@+id/fc3d_ball_three_tv"
            android:text="试机号："
            android:textColor="@color/color_gray_999999"
            android:textSize="@dimen/text_14_sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/fc3d_value_sum_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/fc3d_lable_sum_tv"
            android:textColor="@color/color_gray_999999"
            android:textSize="@dimen/text_14_sp"
            android:text="5 6 1"
            android:visibility="gone"/>



    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/lable_count_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/fc3d_value_count_time"
            android:textColor="@color/color_gray_999999"
            android:textSize="@dimen/text_12_sp" />


        <com.dawoo.lotterybox.view.view.Anticlockwise
            android:id="@+id/fc3d_value_count_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@color/color_gray_999999"
            android:textSize="@dimen/text_12_sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="4dp"
        android:background="@color/color_divider" />
</LinearLayout>
