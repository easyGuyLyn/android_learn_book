<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lLayout_ssc_bottom_second"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    app:behavior_peekHeight="@dimen/ssc_base_top_height"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_miss_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/text_item_bg"
            android:drawableLeft="@mipmap/spiner_icon"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="@string/two_miss_top"
            android:textSize="@dimen/text_18_sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/text_item_bg"
            android:drawableLeft="@mipmap/spiner_icon"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="@string/two_way_paper"
            android:textSize="@dimen/text_18_sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rlv_way_paper_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



    </LinearLayout>

</android.support.v4.widget.NestedScrollView>