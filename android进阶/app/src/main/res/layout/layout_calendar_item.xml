<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_calendar_item_bg"
    android:layout_width="50dp"
    android:layout_height="60dp"
    android:background="@color/color_gray_efefef"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_num_calendar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text=""
        android:textColor="@color/color_gray_666666"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_data1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:text="0.00"
        android:textColor="@color/color_close_theme"
        android:textSize="8dp"
        android:visibility="gone" />

</LinearLayout>
