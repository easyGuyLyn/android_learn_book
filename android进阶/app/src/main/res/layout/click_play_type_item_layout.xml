<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/ssc_b_item_selector"
    android:padding="@dimen/dp_4">

    <TextView
        android:id="@+id/tv_playType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/v_center"
        android:paddingRight="@dimen/dp_6"
        android:text=""
        android:textColor="@color/color_gray_333333"
        android:textSize="16sp" />

    <View
        android:id="@+id/v_center"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerInParent="true"></View>

    <TextView
        android:id="@+id/tv_odds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/v_center"
        android:text=""
        android:textColor="@color/color_gray_666666"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_lr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="8.88"
        android:textColor="@color/color_gray_666666"
        android:textSize="10sp"
        android:visibility="gone" />

</RelativeLayout>
