<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_item_activities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/tv_item_activities_content"
        android:layout_below="@+id/iv_item_activities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="首存优惠赠送"
        android:textColor="@color/colorPrimary"
        android:paddingLeft="20dp"
        android:paddingTop="10dp" />
    <TextView
        android:id="@+id/tv_item_activities_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="活动时间： 2017-12-20至2017-12-23"
        android:layout_below="@id/tv_item_activities_content"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/go"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/iv_item_activities"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        />
</RelativeLayout>