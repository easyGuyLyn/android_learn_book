    </style>


    <style name="common_btn_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:background">@drawable/shape_corn_bg_orange</item>
        <item name="android:textSize">@dimen/text_14_sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="common_ball_style">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:gravity">center</item>
